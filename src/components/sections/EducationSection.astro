---
import { resume } from "@/data/resume";
import Section from "../Section.astro";

const { education } = resume;
---

<Section title="Educacion">
  <div class="flex flex-col gap-4 mt-2 print:mt-4">
    {
      education.map((grade) => {
        const { title, start, end, place, country } = grade;

        return (
          <section class="flex flex-col gap-2 print:gap-0 print:p-0">
            <header class="flex justify-between items-center">
              <h3 class="text-base font-bold print:text-sm text-neutral-600">
                {title}
              </h3>
              <span class="text-neutral-600 text-xs font-mono">
                {start} - {end}
              </span>
            </header>
            <footer class="text-sm font-mono max-w-md">
              <p>
                {place} - {country}
              </p>
            </footer>
          </section>
        );
      })
    }
  </div>
</Section>
