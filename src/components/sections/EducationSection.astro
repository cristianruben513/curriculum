---
import { resume } from "@/data/resume"
import Section from "../Section.astro"

const { education } = resume
---

<Section title='Educacion'>
  <div class='flex flex-col gap-4 mt-2 print:mt-4'>
    {
      education.map(({ title, start, end, place, country }) => (
        <section class='flex flex-col gap-2 print:gap-0 print:p-0'>
          <header class='flex md:justify-between items-center'>
            <h3 class='font-bold print:text-sm text-neutral-600'>{title}</h3>
            <span class='mx-3 md:hidden'>&bullet;</span>
            <span class='text-neutral-600 text-xs font-mono'>
              {start} - {end}
            </span>
          </header>
          <footer class='print:mt-1 max-w-md font-size-content'>
            {place} - {country}
          </footer>
        </section>
      ))
    }
  </div>
</Section>
