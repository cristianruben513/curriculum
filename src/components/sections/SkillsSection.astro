---
import { resume } from "@/data/resume"
import { useTranslate } from "@/i18n/utils"
import Section from "../Section.astro"
import SkillCard from "../SkillCard.astro"

const stack = resume.stack
const t = useTranslate(Astro.currentLocale)
---

<Section class="print:mt-[80px]" title={t("SKILLS_TEXT")}>
  <div class='flex flex-wrap gap-3 print:gap-y-2 print:mt-5 mt-2'>
    {stack.map((tag) => <SkillCard name={tag} />)}
  </div>
</Section>
