---
import { resume } from "@/data/resume"
import clsx from "clsx"
import SocialIcons from "../SocialIcons.astro"

const lang = Astro.currentLocale
---

<div
  class={clsx(
    "flex md:flex-row flex-col print:flex-row",
    "items-start md:items-center md:justify-between",
    "gap-10 mb-10 md:mb-6 mx-6 lg:mx-0 ",
    "print:mb-2 print:gap-6 print:mt-[30px]",
  )}
>
  <img
    src='/avatar.webp'
    alt='portrait'
    loading='eager'
    class='md:size-36 size-40 print:size-[152px] print:mt-[40px] rounded-xl flex md:hidden print:hidden'
  />
  <div>
    <h1 class='font-size-title'>{resume.name}</h1>

    <div class='flex flex-col'>
      <h2
        class={clsx(
          "my-3 mb-1 print:my-1 text-sm print:mb-4 font-mono",
          "max-w-lg print:max-w-md leading-relaxed",
          "print:text-[rgb(47,47,47)]",
        )}
      >
        {lang === "en" && resume.description.en}
        {lang === "es" && resume.description.es}
      </h2>

      <SocialIcons />
    </div>
  </div>
</div>
