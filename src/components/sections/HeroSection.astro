---
import clsx from "clsx"
import SocialIcons from "../SocialIcons.astro"

import { useTranslate } from "@/i18n/utils"

const lang = Astro.currentLocale
const t = useTranslate(lang)
---

<div
  class={clsx(
    "flex md:flex-row flex-col print:flex-row",
    "items-start md:items-center md:justify-between",
    "gap-10 mb-10 md:mb-6 mx-6 lg:mx-0 ",
    "print:mb-2 print:gap-6 print:mt-[30px]",
  )}
>
  <img
    src='/avatar.webp'
    alt='portrait'
    loading='eager'
    class='md:size-36 size-40 print:size-[152px] print:mt-[40px] rounded-xl flex md:hidden print:hidden'
  />
  <div>
    <h1
      class={clsx(
        "font-bold text-black print:mb-3",
        "text-[22px] md:text-2xl print:text-[28px]",
        "text-balance",
      )}
    >
      Cristian Rub√©n Figueroa Espinoza
    </h1>

    <div class='flex flex-col'>
      <h2
        class={clsx(
          "my-3 mb-1 print:my-1 text-sm print:mb-4 text-pretty font-mono",
          "max-w-lg print:max-w-md leading-relaxed",
          "print:text-[rgb(47,47,47)]",
        )}
      >
        {t("DESCRIPTION")}
      </h2>

      <SocialIcons />
    </div>
  </div>
</div>
